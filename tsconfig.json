{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2015",
    "jsx": "react",
    "types": [],
    "composite": true
  },
  "include": [
    "src/*"
  ],
  "references": [
    {
      "path": "../application"
    },
    {
      "path": "../apputils"
    },
    {
      "path": "../databus"
    },
    {
      "path": "../docregistry"
    },
    {
      "path": "../frontend"
    }
  ]
}
